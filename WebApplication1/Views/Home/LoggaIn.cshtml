@model WebApplication1.Models.LoginViewModel


<link rel="stylesheet" href="~/styles/css.css" />
<link rel="stylesheet" href="~/styles/bootstrap.min.css" />


<div class="container text-center">
   @using (Html.BeginForm("LoggaIn","Login"))
   {
       <div class="row">
           <div class="col-md-6 col-md-offset-3 text-center">
               <div class="form-group">
                   @Html.TextBox("LoginName", "", new { placeholder = "Användarnamn", @class = "form-control" })
               </div>
               <div class="form-group">
                   @Html.TextBox("LoginPassword", "", new { placeholder = "Lösenord", @class = "form-control" })
               </div>
               <div class="form-group">
                   <input type="submit" class="btn btn-success" value="Logga In" />
               </div>
           </div>
   
   

</div>
   }
</div>

<script src="~/Scripts/bootstrap.min.js"></script>